<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sell_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layout_marginTop="20dp">


    <Button
        android:text="Post"
        android:id="@+id/button2"
        android:layout_gravity="end"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:background="@color/color3"
        android:textColor="#FFFFFF"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Item Price:"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_alignBaseline="@+id/editprice"
        android:layout_alignBottom="@+id/editprice"
        android:layout_alignStart="@+id/textView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editdesc"
        android:layout_below="@+id/editText"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="8"
        android:id="@+id/editprice"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editdesc"
        android:layout_alignStart="@+id/editdesc" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editmail"
        android:hint="Email ID"
        android:layout_below="@+id/editprice"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:text="Contact Info:"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:layout_alignBaseline="@+id/editmail"
        android:layout_alignBottom="@+id/editmail"
        android:layout_alignStart="@+id/textView14" />

    <TextView
        android:text="Description:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:layout_alignBaseline="@+id/editdesc"
        android:layout_alignBottom="@+id/editdesc"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:text="Item Name :"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView10"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:id="@+id/imageView"
        android:layout_alignTop="@+id/upload"
        android:layout_alignEnd="@+id/editphone" />

    <Button
        android:text="Upload photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/color3"
        android:textColor="#FFFFFF"
        android:ems="8"
        android:onClick="uploadPhoto"
        android:id="@+id/upload"
        android:layout_marginStart="23dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/editphone"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="8"
        android:id="@+id/editphone"
        android:hint="Phone Number"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/editmail"
        android:layout_alignStart="@+id/editmail" />


</RelativeLayout>